<shortcuts>
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="RuvChain" location="startMenu"/>
	<shortcut
		name="RuvChain Server"
		target="$INSTALL_PATH\RuvChain.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start RuvChain server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no"
		runAsAdministrator="true">
	</shortcut>	
	<shortcut
		name="RuvChain Wallet"
		target="http://localhost:5251/index.html"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Launch RuvChain wallet in browser"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>	
</shortcuts>